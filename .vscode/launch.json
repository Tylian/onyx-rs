    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'onyx'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=onyx"
                ],
                "filter": {
                    "name": "onyx",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUNTIME_PATH": "${workspaceFolder}/runtime",
                "RUST_BACKTRACE": "1"
            }
        },
